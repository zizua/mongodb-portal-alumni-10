<!-- new -->
<div class="container">
  <div class="row">
    <div class="col text-center" style="padding-top: 5em;">
      <% if (!alumni) { %>
      <div class="alert alert-info fw-bold" role="alert">
        Data alumni tidak ada ! <br />
        <a href="/alumni" class="alert-link fw-normal">&laquo; Kembali ke daftar alumni</a>
      </div>
      <% } else { %>
      <div style="background-color: #181d38; padding: 20px; border-radius: 10px; ">
        <br>
        <img src="/img/<%= alumni.foto %>" alt="foto" class="img-thumbnail rounded-circle" width="300" style="object-fit: cover;">
        <br>
        <br>
        <h1 style="color: white; font-weight: bold; "><%= alumni.nama %> <br /></h1>
        <h2 style="color: white; font-weight: bold;"><%= alumni.nim %></h2>
      </div>
      <br />
      <div style="padding: 20px; border-radius: 10px;">
        <h5 class="card-subtitle mb-2 text-body-secondary" style="font-weight: bold">Program Studi <br /></h5>
        <h5><%= alumni.programStudi %></h5>
        <h5><%= alumni.tahunLulus %></h5>
      </div>
      <div style="border-radius: 10px;">
        <h5 class="card-subtitle mb-2 text-body-secondary" style="font-weight: bold">Judul Tugas Akhir <br /></h5>
        <h5><%= alumni.judulTA %></h5>
      </div>
      <br />
      <div style="border-radius: 10px;">
        <h5 class="card-subtitle mb-2 text-body-secondary" style="font-weight: bold">Jenjang Karir <br /></h5>
        <h5><%= alumni.jenjangKarir %></h5>
      </div>
      <br />
      <div style="border-radius: 10px;">
        <h5 class="card-subtitle mb-2 text-body-secondary" style="font-weight: bold">Kontak </h5> <br>
        <div class="position-relative d-flex justify-content-center" style="margin-top: -23px">
          <div class="bg-light d-flex justify-content-center pt-2 px-1">
            <% if (alumni.kontak1) { %>
            <a class="btn btn-sm-square btn-dark mx-1" href="<%= alumni.kontak1 %>"><i class="fab fa-linkedin"></i></a>
            <% } %>
            <% if (alumni.kontak2) { %>
            <a class="btn btn-sm-square btn-dark mx-1" href="<%= alumni.kontak2 %>"><i class="fab fa-instagram"></i></a>
            <% } %>
            <% if (alumni.kontak3) { %>
            <a class="btn btn-sm-square btn-dark mx-1" href="<%= alumni.kontak3 %>"><i class="fab fa-github"></i></a>
            <% } %>
          </div>
        </div>
      </div>
      <br />
      <a href="/alumni/edit/<%= alumni.nama %>" class="btn btn-dark ">edit</a>
      <form action="/alumni?_method=DELETE" method="POST" class="d-inline">
        <button type="submit" class="btn btn-danger " onclick="return confirm ('Apakah anda yakin ingin menghapus data ini?')">hapus</button>
        <input type="hidden" name="nama" value="<%= alumni.nama %>" />
      </form>
      <br><br>
      <a href="/alumni" class="card-link d-block mt-3" style="font-size: 18px; font-weight: bold;">&laquo; Kembali ke daftar alumni</a>
      <% } %>
    </div>
  </div>
</div>





  <!-- Footer Start -->
  <div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
      <div class="col-lg-10 col-md-3">
        <h4 class="text-white mb-3">Contact</h4>
        <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>Campus A: Jl. Situ Indah no.116, Cimanggis, Depok</p>
        <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>Campus B: Jl. Raya Lenteng Agung No.20, Jagakarsa</p>
        <p class="mb-2"><i class="fa fa-phone-alt me-3"></i> 021 - 786 3191</p>
        <p class="mb-2"><i class="fa fa-envelope me-3"></i>info@nurulfikri.ac.id</p>
        <div class="d-flex pt-2">
          <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-twitter"></i></a>
          <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-facebook-f"></i></a>
          <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-youtube"></i></a>
          <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-linkedin-in"></i></a>
        </div>
      </div>
      <!-- Footer End -->

      <!-- Back to Top -->
      <a href="#" class="btn btn-lg btn-dark btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>
  </div>
</div>
