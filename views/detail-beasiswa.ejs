<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <% if (!beasiswa) { %>
      <div class="alert alert-info fw-bold" role="alert">
        Data beasiswa tidak ada!
        <br />
        <a href="/beasiswa" class="alert-link fw-normal">&laquo; Kembali ke daftar beasiswa</a>
      </div>
      <% } else { %>
      <div class="text-center">
        <img src="/img/<%= beasiswa.gambar %>" alt="Gambar Beasiswa" class="img-fluid mb-3 w-100">
      </div>
      <h2 style="font-weight: bold;"><%= beasiswa.namaBeasiswa %></h2>
      <br>
      <h5 style="font-weight: bold;"><%= beasiswa.jenjang %></h5>
      <br>
      <p style="text-align: justify;"><%= beasiswa.deskripsi %></p>
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div style="display: flex; flex-direction: column;">
          <h6 class="mb-0">Periode:</h6>
          <p class="mb-0"><%= beasiswa.periode %></p>
        </div>
        <div>
          <h6 class="mb-0">Sumber:</h6>
          <% if (beasiswa.sumber) { %>
          <a href="<%= beasiswa.sumber %>" class="btn btn-dark"><i class="fas fa-globe"></i> Website</a>
          <% } %>
        </div>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group" role="group">
          <a href="/beasiswa/edit/<%= beasiswa.namaBeasiswa %>" class="btn btn-primary">Edit</a>
          <form action="/beasiswa?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger" onclick="return confirm ('Apakah anda yakin ingin menghapus data ini?')">Hapus</button>
            <input type="hidden" name="namaBeasiswa" value="<%= beasiswa.namaBeasiswa %>" />
          </form>
        </div>
      </div>
      <a href="/beasiswa" style="font-weight: bold;" class="card-link d-block mt-3">&laquo; Kembali ke daftar beasiswa</a>
      <% } %>
    </div>
  </div>
</div>




  
  
