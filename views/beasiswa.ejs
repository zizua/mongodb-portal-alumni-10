<div class="container-fluid bg-primary py-5 mb-5 page-header">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-10 text-center">
        <h1 class="display-3 text-white animated slideInDown">Beasiswa</h1>
      </div>
    </div>
  </div>
</div>
<!-- Header End -->

<!-- card beasiswa start -->
<div class="container-fluid">
  <div class="row">
    <div class="col text-center wow fadeInUp" data-wow-delay="0.1s">
      <h6 class="section-title bg-white text-center text-blue px-3">Beasiswa</h6>
      <h1 class="mb-5">Available Scholarship</h1>
    </div>
  </div>
  <!-- Fitur Pencarian Start-->
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 mx-auto">
        <form id="searchForm" class="d-flex align-items-center">
          <div class="form-group mr-2">
            <input type="text" class="form-control" id="searchName" placeholder="Cari Beasiswa : LPDP, Scholarship, etc.." style="width: 500px" />
          </div>
          <button type="submit" class="btn btn-dark">Cari</button>
        </form>
      </div>
    </div>
  </div>

  <div class="container-fluid py-5 mb-5 wow fadeInUp" data-wow-delay="0.1s">
    <% beasiswas.forEach((beasiswa, i) => { %>
      <div class="row mb-2 beasiswa-item" style="display: block;">
        <div class="col-md-12">
          <div class="card team-item">
            <div class="row no-gutters">
              <div class="col-md-3">
                <img src="/img/<%= beasiswa.gambar %>" class="card-img" alt="Gambar Beasiswa" style="max-width: 100%; height: auto" />
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title beasiswa-name" style="font-size: 28px"><%= beasiswa.namaBeasiswa %></h5>
                  <p class="card-text" style="font-size: 20px"><%= beasiswa.jenjang %></p>
                  <p class="card-text" style="font-size: 20px"><%= beasiswa.periode %></p>
                  <!-- <p class="card-text"><%= beasiswa.deskripsi %></p> -->
                  <!-- <p class="card-text"><%= beasiswa.sumber %></p> -->
                  <a href="beasiswa/<%= beasiswa.namaBeasiswa %>" class="btn btn-danger badge rounded-pill"><i class="bi bi-info-circle"></i> detail</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

  <!-- card beasiswa end-->
  <div class="container text-center">
    <a href="/beasiswa/add" class="btn btn-warning mb-3" style="margin-top: -5rem; margin-bottom: 5rem;">Tambah Data Beasiswa</a>
  </div>

  <!-- Footer Start -->
  <div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
      <div class="col-lg-10 col-md-3">
        <h4 class="text-white mb-3">Contact</h4>
        <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>Campus A: Jl. Situ Indah no.116, Cimanggis, Depok</p>
        <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>Campus B: Jl. Raya Lenteng Agung No.20, Jagakarsa</p>
        <p class="mb-2"><i class="fa fa-phone-alt me-3"></i> 021 - 786 3191</p>
        <p class="mb-2"><i class="fa fa-envelope me-3"></i>info@nurulfikri.ac.id</p>
        <div class="d-flex pt-2">
          <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-twitter"></i></a>
          <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-facebook-f"></i></a>
          <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-youtube"></i></a>
          <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-linkedin-in"></i></a>
        </div>
      </div>
      <!-- Footer End -->

      <!-- Back to Top -->
      <a href="#" class="btn btn-lg btn-dark btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>
  </div>
</div>
